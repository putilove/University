<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://testTimetable.caption">
    <data>
        <collection id="lessonsDc" class="com.company.university.entity.Lesson">
            <fetchPlan extends="_base">
                <property name="group" fetchPlan="_base"/>
                <property name="auditorium" fetchPlan="_base"/>
                <property name="teacher" fetchPlan="_base"/>
            </fetchPlan>
            <loader id="lessonsDl">
                <query>
                    <![CDATA[select e from Lesson e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <lookupScreen id="lookupScreen_1"/>
    </facets>
    <layout>
        <vbox spacing="true" height="100%">
            <groupTable id="lessonsTable" height="100%" width="100%" dataContainer="lessonsDc">
                <actions>
                    <action id="showEntityInfo" type="showEntityInfo"/>
                    <action id="view" type="view"/>
                </actions>
                <buttonsPanel alwaysVisible="true" width="100%" height="100%">
                    <button id="lessonsTableShowEntityInfoBtn" action="lessonsTable.showEntityInfo"/>
                    <button id="lessonsTableViewBtn" action="lessonsTable.view"/>
                </buttonsPanel>
                <columns>
                    <column id="group"/>
                    <column id="date"/>
                    <column id="time"/>
                    <column id="auditorium"/>
                    <column id="teacher"/>
                </columns>
            </groupTable>
        </vbox>
    </layout>
</window>